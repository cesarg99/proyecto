<%- include('./barralateral'); %>
<!-- TABLA DATOS ESTUDIANTE -->
<br>
<table border="2px" class="center">
    <h5 class="center">(Cuando llegue al total de 500 horas podra enviar su proceso de servicio social)</h5>
    <tr>
        <td>Nombre</td>
        <td>Apellido</td>
        <td>Estado</td>

    </tr> 
    <% datosestudiante.forEach(function(item) { %> 

        <tr>
            <td><%= item.nombres %></td>
            <td><%= item.apellidos %></td>
            <td><%= item.estado %></td>
           
        </tr>
       
<% }); %> 
      
</table>

<!-- Numero de horas-->

<table border="6px" class="center">

    <tr>
        <td>Numero de Horas</td>
    </tr>
    
    <% datoscontrol.forEach(function(item2) { %> 
    
    <tr>
        <td>  <%= item2.numhoras %> </td>
    </tr>
    <% }); %> 
</table>



<!-- Calcular total horas -->

<table border="2px" class="center">

<tr>
<td>
<% var suma = 0;  %>
<% datoscontrol.forEach(function(item3){ %>
<% suma += item3.numhoras %> 
    
<% }); %>

<% if (suma>=500) {%>
    <br>
    <label>Horas Alcanzadas</label>
    <br>
    <%= suma %>
    <br>
    <% datosestudiante.forEach(function(item) { %> 
       
    <% if(item.estado=='en proceso') { %>
    <form method="POST">
    <label><input type="checkbox" name="estado" id="estado" value="en revision" checked>
    Enviar proceso de servicio social (debe enviar solo una vez)</label>
    <br>
    <br> 
                      <button>Enviar</button>
                      <br>
</form>
<% } %>
<% }); %> 
    <% }else{ %>
    <label>Total Horas</label>
    <br>
     <%= suma %>
    <%  } %>

</td>
</tr>
</table>
